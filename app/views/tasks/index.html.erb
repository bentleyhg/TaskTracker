<html>
	<head>
	</head>
	<body>
		<div id="contentbox">
			<div id="content">
				<h1>Listing tasks</h1>

				<table>
				  <tr>
					<th>User</th>
					<th>Category</th>
					<th>Diff level</th>
					<th>Diff type</th>
					<th>Priority</th>
					<th>Description</th>
					<th>Status</th>
					<th>Assign date</th>
					<th>Complete date</th>
					<th></th>
					<th></th>
					<th></th>
				  </tr>

				<% @tasks.each do |task| %>
				  <tr>
					<td><%= task.user_id %></td>
					<td><%= task.category %></td>
					<td><%= task.diff_level %></td>
					<td><%= task.diff_type %></td>
					<td><%= task.priority %></td>
					<td><%= task.description %></td>
					<td><%= task.status %></td>
					<td><%= task.assign_date %></td>
					<td><%= task.complete_date %></td>
					<td><%= link_to 'Show', task %></td>
					<td><%= link_to 'Edit', edit_task_path(task) %></td>
					<td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
				  </tr>
				<% end %>
				</table>

				<br />

				<%= link_to 'New Task', new_task_path %>
			</div>
		</div>
	</body>
</html>
